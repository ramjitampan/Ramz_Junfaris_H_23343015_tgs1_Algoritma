{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Raylib",
            "type": "shell",
            "command": "gcc",
            "args": [
                "raylib_DFS.c",
                "-o",
                "build/game.exe",
                "-I",
                "C:/raylib/raylib/src",
                "-L",
                "C:/raylib/raylib/src",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}

